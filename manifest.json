{
  "manifest_version": 2,

  "name": "Yahoo DJI Stock Counter",
  "description": "Cuenta cuantos indices verdes VS rojos en el Yahoo DJI Index Average.",
  "version": "1.0.9",

  "permissions": [ "tabs" ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Mas..."
  },

  "content_scripts": [
    {
      "matches": ["https://es-us.finanzas.yahoo.com/q/cp?s=%5EDJI"],
      "js": ["jquery.min.js", "stockcounter.js"],
      "run_at": "document_idle"
    }
  ]
}